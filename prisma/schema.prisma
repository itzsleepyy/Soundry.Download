// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Track {
  id              String   @id @default(uuid())
  provider        String // "youtube", "spotify", "soundcloud"
  title           String
  artist          String
  durationSeconds Int
  createdAt       DateTime @default(now())
  completedAt     DateTime?
  expiresAt       DateTime?
  status          String   @default("queued") // queued, processing, completed, failed
  error           String?
  files           File[]
  sessionItems    SessionItem[]
}

model File {
  id        String @id @default(uuid())
  trackId   String
  track     Track  @relation(fields: [trackId], references: [id], onDelete: Cascade)
  format    String // mp3, wav, flac
  path      String // Relative to storage root
  sizeBytes BigInt
  checksum  String?
}



model SessionGroup {
  id           String        @id @default(uuid())
  sessionToken String
  title        String
  totalTracks  Int
  createdAt    DateTime      @default(now())
  items        SessionItem[]
  paused       Boolean       @default(false)
}

model SessionItem {
  id           String        @id @default(uuid())
  sessionToken String
  trackId      String
  track        Track         @relation(fields: [trackId], references: [id], onDelete: Cascade)
  source       String // "requested", "downloaded"
  createdAt    DateTime      @default(now())
  
  groupId      String?
  group        SessionGroup? @relation(fields: [groupId], references: [id], onDelete: Cascade)

  @@index([sessionToken])
}

model ResolverCache {
  id        String   @id @default(uuid())
  key       String   @unique // e.g. "spotify:trackId" or "artist:title"
  value     String   // youtubeVideoId
  createdAt DateTime @default(now())
  expiresAt DateTime
}

model MetadataCache {
  id        String   @id @default(uuid())
  key       String   @unique // youtubeVideoId
  data      String   // JSON string of metadata
  createdAt DateTime @default(now())
  expiresAt DateTime
}
